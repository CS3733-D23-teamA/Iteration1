<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import net.kurobako.gesturefx.GesturePane?>

<ScrollPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.teamA.controllers.Navigation.MapEditorController">
   <content>
      <BorderPane>
         <top>
            <AnchorPane prefHeight="100.0" prefWidth="1600.0" BorderPane.alignment="CENTER">
                <fx:include fx:id="header" source="Header.fxml" />
      
      </AnchorPane>
         </top>
         <center>
            <AnchorPane prefHeight="700.0" prefWidth="1600.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="700.0" prefWidth="1600.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="800.0">
                           <children>
                              <VBox prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <MFXButton fx:id="levelButton" onAction="#levelChooser" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #98AABC;" text="Level G" textFill="#012d5a">
                                       <font>
                                          <Font name="Open Sans Regular" size="32.0" />
                                       </font>
                                    </MFXButton>
                                    <VBox fx:id="levelMenu" maxWidth="-Infinity" prefHeight="200.0" prefWidth="200.0">
                                       <children>
                                          <MFXButton fx:id="levelGButton" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #98AABC;" text="Level G" textFill="#012d5a">
                                             <font>
                                                <Font name="Open Sans Regular" size="32.0" />
                                             </font>
                                          </MFXButton>
                                          <MFXButton fx:id="levelL1Button" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #98AABC;" text="Level L1" textFill="#012d5a">
                                             <font>
                                                <Font name="Open Sans Regular" size="32.0" />
                                             </font>
                                          </MFXButton>
                                          <MFXButton fx:id="levelL2Button" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #98AABC;" text="Level L2" textFill="#012d5a">
                                             <font>
                                                <Font name="Open Sans Regular" size="32.0" />
                                             </font>
                                          </MFXButton>
                                          <MFXButton fx:id="level1Button" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #98AABC;" text="Level 1" textFill="#012d5a">
                                             <font>
                                                <Font name="Open Sans Regular" size="32.0" />
                                             </font>
                                          </MFXButton>
                                          <MFXButton fx:id="level2Button" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #98AABC;" text="Level 2" textFill="#012d5a">
                                             <font>
                                                <Font name="Open Sans Regular" size="32.0" />
                                             </font>
                                          </MFXButton>
                                          <MFXButton fx:id="level3Button" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #98AABC;" text="Level 3" textFill="#012d5a">
                                             <font>
                                                <Font name="Open Sans Regular" size="32.0" />
                                             </font>
                                          </MFXButton>
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                           </children></VBox>
                        <VBox prefHeight="200.0" prefWidth="800.0">
                           <children>
                              <GesturePane fx:id="mapGesturePane" />
                              <StackPane fx:id="mapStackPane" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="476.0" prefWidth="700.0">
                                 <children>
                                    <ImageView fx:id="mapImage" fitHeight="500.0" fitWidth="720.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/map-page/00_thelowerlevel1.png" />
                                       </image>
                                       <StackPane.margin>
                                          <Insets />
                                       </StackPane.margin>
                                    </ImageView>
                                    <AnchorPane fx:id="dotsAnchorPane" prefHeight="200.0" prefWidth="200.0" />
                                 </children>
                                 <VBox.margin>
                                    <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                                 </VBox.margin>
                              </StackPane>
                              <HBox alignment="CENTER" prefHeight="100.0" prefWidth="800.0" spacing="24.0">
                                 <children>
                                    <MFXButton fx:id="ImportButton" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #98AABC;" text="Import" textFill="#012d5a">
                                       <font>
                                          <Font name="Open Sans Regular" size="32.0" />
                                       </font>
                                    </MFXButton>
                                    <ImageView fx:id="ZoomOut" fitHeight="75.0" fitWidth="75.0" onMouseClicked="#zoomOut" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/map-page/minusIcon.png" />
                                       </image>
                                    </ImageView>
                                    <ImageView fx:id="ZoomIn" fitHeight="75.0" fitWidth="75.0" onMouseClicked="#zoomIn" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../images/map-page/plusIcon.png" />
                                       </image>
                                    </ImageView>
                                    <MFXButton fx:id="ExportButton" prefHeight="60.0" prefWidth="200.0" style="-fx-background-color: #98AABC;" text="Export" textFill="#012d5a">
                                       <font>
                                          <Font name="Open Sans Regular" size="32.0" />
                                       </font>
                                    </MFXButton>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </AnchorPane>
         </center>
      </BorderPane>
   </content>
</ScrollPane>
